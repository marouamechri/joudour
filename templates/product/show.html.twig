{% extends 'baseAdmin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>NameProduct</th>
                <td>{{ product.nameProduct }}</td>
            </tr>
            <tr>
                <th>DescriptionProduct</th>
                <td>{{ product.descriptionProduct }}</td>
            </tr>
            <tr>
                <th>AmountHTVA</th>
                <td>{{ product.amountHTVA }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ product.modifiedAt ? product.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lease</th>
                <td>{{ product.lease ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Sale</th>
                <td>{{ product.sale ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
