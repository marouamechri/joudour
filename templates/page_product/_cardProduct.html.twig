<div class="card shadow-sm mb-3 bg-body rounded" style="width: 17rem;">
{% set productColor = product.productColors|first %}
	<a href="{{ path('app_show_product', {'id': product.id, 'productColor': productColor.id})}}" title="{{ product.nameProduct }}" class="item-link">
		<img   src="{{ asset('/upload/images/product/' ~ product.firstImage)}}" class='imgCard' alt="{{product.nameProduct}}">
	</a>
	<div class="card-body">
		<div class="item-details">
			<p>Ref:{{product.refProduct}}</p>
			<h3 class="item-heading">
				<a class="link" href="#">{{ product.nameProduct }}</a>
			</h3>
			<strong class="item-price">
				<span class="price regular">{{ product.amountHTVA| number_format(0, ',' , ' ') }}€</span>
			</strong>
			<div>
				<ul class="list-swatches" >
					{% for colorProduct in product.productColors %}
						<li class="item">
							<a href="#" class="swatch" style="background-color: {{colorProduct.color.refColor}}" title="{{colorProduct.color.nameColor}}">
								{{colorProduct.color.nameColor}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="new-product">Nouveauté</div>
		</div>
	</div>
</div>
