{% block title %}Log in!
{% endblock %}
{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

{% endblock %}
{% block body %}
	<section class="vh-100" style="background-color: #9A616D;">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-xl-10">
					<div class="card" style="border-radius: 1rem;">
						<div class="row g-0">
							<div class="col-md-6 col-lg-5 d-none d-md-block">
								<img src="{{ asset('upload/images/website/5a10e9080b3b55d3173fb7f2c90935a0.jpg')}}" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
							</div>
							<div class="col-md-6 col-lg-7 d-flex align-items-center">
								<div class="card-body p-3 p-lg-3 text-black">
                                <div class="text-end">
									<a href="{{path('home')}}" class="text-decoration-none text-dark">
										<i class="fa fa-arrow-left text-dark" style="font-size:20px"></i>
										Retour à l'accueil
									</a>
                                    </div>
									<form method="post">
										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}

										{% if app.user %}
											<div class="mb-3">
												Vous êtes connecté en tant que
												{{ app.user }},
												<a href="{{ path('app_logout') }}">Se déconnecter</a>
											</div>
										{% endif %}
										<h2 class="h3 mb-3 font-weight-normal">Identifiez-vous</h2>
                                        
										<label for="inputEmail">Email</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
										<label for="inputPassword">mot de passe</label>
										<input
										type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
										<div class='mb-4'>
											<a class='small text-muted' href="{{ path('app_forgot_password_request') }}">Mot de passe oubliée</a>
										</div>
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
										<div class='pt-1 mb-3 text-center'>
											<button class="btn btn-dark btn-lg btn-block" type="submit">
												S'identifier
											</button>
										</div>
									</form>
									<hr>
									<div>
										<h2 class="h3 mb-3 font-weight-normal">Premiére visite?</h2>
                                        <div class="mb-3">Inscrivez-vous en quelques clics!</div>
                                        <div class='pt-1 mb-3  text-center'>
											<a href="{{path('app_register')}}" class="btn btn-dark btn-lg btn-block">
												S'inscire
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
            <div class="text-center">
            <p class='small'>Ce site est protégé par reCAPTCHA. Les règles de confidentialité et les conditions d’utilisation de Google s’appliquent.</p>
            </div>
		</div>
	</section>
{% endblock %}
