{% extends 'baseAdmin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Liste de categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NameCategory</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameCategory }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">Afficher</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">la Liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Ajouter</a>
{% endblock %}
